@page
@model FirebirdWeb.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-page">
    <h2>Dashboard</h2>

    <div class="dashboard-cards">
        <!-- Scanner Card -->
        <div class="card" onclick="location.href='@Url.Page("/Scanner")'">
            <h3>Scanner</h3>
            <p>Click here to go to the Scan page</p>
        </div>
    </div>
</div>

<style>
/* Dashboard page styling */
.dashboard-page {
    padding: 20px;
}

.dashboard-page h2 {
    margin-bottom: 25px;
    color: #333;
}

/* Cards container */
.dashboard-cards {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
}

/* Individual card */
.card {
    background-color: #667eea;
    color: white;
    padding: 20px;
    border-radius: 12px;
    width: 220px;
    height: 130px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    transition: 0.3s;
    text-align: center;
}

.card h3 {
    margin-bottom: 10px;
}

.card p {
    font-size: 14px;
}

/* Hover effect */
.card:hover {
    background-color: #5a67d8;
    box-shadow: 0 6px 18px rgba(0,0,0,0.3);
}

/* Responsive for smaller screens */
@@media (max-width: 600px) {
    .dashboard-cards {
        flex-direction: column;
        align-items: center;
    }
}
</style>